--auto play
local btnAutoPlay = Instance.new("TextButton", HomeFrame)
btnAutoPlay.Size = UDim2.new(0, 90, 0, 30)
btnAutoPlay.Position = UDim2.new(0, 240, 0, 110)
btnAutoPlay.Text = "OFF"
btnAutoPlay.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
btnAutoPlay.TextColor3 = Color3.new(1, 1, 1)
btnAutoPlay.Font = Enum.Font.SourceSansBold
btnAutoPlay.TextSize = 30

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local VirtualInputManager = game:GetService("VirtualInputManager")
local LocalPlayer = Players.LocalPlayer
local MAX_DISTANCE = 1000
local TweenSpeed = 20
local autoPlay = false

-- Tween ƒë·∫øn v·ªã tr√≠
local function tweenTo(position)
	local char = LocalPlayer.Character
	if not char then return end
	local hrp = char:FindFirstChild("HumanoidRootPart")
	if not hrp then return end

	local distance = (hrp.Position - position).Magnitude
	local time = distance / TweenSpeed
	local goal = { CFrame = CFrame.new(position + Vector3.new(0, 3, 0)) }

	local tween = TweenService:Create(hrp, TweenInfo.new(time, Enum.EasingStyle.Linear), goal)
	tween:Play()
	tween.Completed:Wait()
end

-- Ki·ªÉm tra Tool
local function hasTool(name)
	for _, t in pairs(LocalPlayer.Backpack:GetChildren()) do
		if t:IsA("Tool") and t.Name:lower():find(name:lower()) then
			return t
		end
	end
	local char = LocalPlayer.Character
	if char then
		for _, t in pairs(char:GetChildren()) do
			if t:IsA("Tool") and t.Name:lower():find(name:lower()) then
				return t
			end
		end
	end
	return nil
end

-- T√¨m ng∆∞·ªùi ch∆°i g·∫ßn nh·∫•t v·ªõi toolName
local function getNearestPlayerWithTool(toolName)
	local myChar = LocalPlayer.Character
	local myHRP = myChar and myChar:FindFirstChild("HumanoidRootPart")
	if not myHRP then return nil end

	local nearest, shortest = nil, math.huge
	for _, plr in pairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer and plr.Character then
			local hasTool = false
			for _, t in pairs(plr.Backpack:GetChildren()) do
				if t:IsA("Tool") and t.Name:lower():find(toolName:lower()) then
					hasTool = true break
				end
			end
			for _, t in pairs(plr.Character:GetChildren()) do
				if t:IsA("Tool") and t.Name:lower():find(toolName:lower()) then
					hasTool = true break
				end
			end
			if hasTool then
				local hrp = plr.Character:FindFirstChild("HumanoidRootPart")
				if hrp then
					local dist = (myHRP.Position - hrp.Position).Magnitude
					if dist < shortest and dist <= MAX_DISTANCE then
						shortest = dist
						nearest = hrp
					end
				end
			end
		end
	end
	return nearest
end

-- L·∫•y to√†n b·ªô Coin_Server
local function getAllCoins()
	local coins = {}
	for _, obj in pairs(workspace:GetDescendants()) do
		if obj:IsA("BasePart") and obj.Name == "Coin_Server" then
			table.insert(coins, obj)
		end
	end
	return coins
end

-- Coin g·∫ßn nh·∫•t ch∆∞a ƒëi
local function getNearestCoin(ignoredCoins)
	local char = LocalPlayer.Character
	local hrp = char and char:FindFirstChild("HumanoidRootPart")
	if not hrp then return nil end

	local nearest, shortest = nil, math.huge
	for _, coin in pairs(getAllCoins()) do
		if not ignoredCoins[coin] then
			local dist = (hrp.Position - coin.Position).Magnitude
			if dist < shortest and dist <= MAX_DISTANCE then
				shortest = dist
				nearest = coin
			end
		end
	end
	return nearest
end

-- AUTO LOOP
local function autoPlayLoop()
	local visited = {}

	while autoPlay do
		local knife = hasTool("Knife")

		if not knife then
			-- Ch·ªâ nh·∫∑t Coin n·∫øu kh√¥ng c√≥ Knife (b·ªè qua Gun ho√†n to√†n)
			local coin = getNearestCoin(visited)
			if coin then
				visited[coin] = true
				tweenTo(coin.Position)
				task.wait(0.1)
			else
				visited = {}
				task.wait(0.5)
			end
		else
			-- N·∫øu c√≥ Knife, t·∫•n c√¥ng ng∆∞·ªùi ch∆°i g·∫ßn nh·∫•t
			local target = getNearestPlayerWithTool("")
			if target then
				tweenTo(target.Position)
				VirtualInputManager:SendMouseButtonEvent(0, 0, 0, true, game, 0)
				VirtualInputManager:SendMouseButtonEvent(0, 0, 0, false, game, 0)
			end
		end

		task.wait(0.1)
	end
end

-- TOGGLE BUTTON
btnAutoPlay.MouseButton1Click:Connect(function()
	autoPlay = not autoPlay
	btnAutoPlay.Text = autoPlay and "ON" or "OFF"
	btnAutoPlay.BackgroundColor3 = autoPlay and Color3.fromRGB(50, 255, 50) or Color3.fromRGB(255, 50, 50)

	if autoPlay then
		task.spawn(autoPlayLoop)
	end
end)

